<%- include('partials/header') %>
<h1>Author:<%= author.name %></h1>
<p>
  <%= author.date_of_birth_formatted %> - <%= author.date_of_death_formatted %>
</p>
<% if(author_books.length){ %>
<p>
  <b>Delete the following books before attempting to delete this author.</b>
</p>
<div style="margin-left: 20px; margin-top: 20px">
  <h4>Books</h4>
  <dl>
    <% author_books.map(book => { %>
    <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
    <dd><%= book.summary %></dd>
    <% }) %>
  </dl>
</div>
<% }else{ %>
<p>Do you really want to delete this Author?</p>
<form method="POST" action="">
  <div class="form-group">
    <input
      id="authorid"
      class="form-control"
      type="hidden"
      name="authorid"
      value="<%= author._id %>"
      required="true"
    />
  </div>
  <input type="submit" value="Delete" class="btn btn-danger" />
</form>
<% } - include('partials/footer') %>
